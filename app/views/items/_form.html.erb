<%= simple_form_for @item do |f| %>
  <%= f.input :category %>
  <%= f.input :name %>
  <%= f.input :sub_category %>
  <%= f.input :explanation %>
  <%= f.input :scoring %>
  <%= f.input :high_score %>
  <%= f.input :all_or_nothing, as: :boolean, checked_value:true, unchecked_value: false %>
  <%= f.hidden_field :survey_id, as: :hidden, value: params[:survey_id] %>
  <%= f.button :submit, submit_text %>
<% end %>