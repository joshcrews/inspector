
<%# will_paginate @items %>



<%= form_for :inspection do |f| %>


<% @items.each do |item| %>
  <h3><%= "#{item.sub_category}" %></h3>
  <%= f.text_field :survey_id %>
    <div class="item_enclosure row">
    	<div class="item_text small-9 large-9 columns">
    		<%= "#{item.name}" %>
    	</div>
        <div class="small-3 columns">
            <div class="item_scoring">
                <div class="row">
                    <div class="item_score item-<%= item.id %> small-6 columns">
                        
                        <%= f.fields_for :scores do |builder| %><%= builder.text_field :score_item, placeholder: item.high_score %>
                        <%= builder.hidden_field :inspection_id, value: params[:id] %>
                        <%= builder.hidden_field :item_id, value: item.id %>
                        <% end %>
                    </div>

                    <div class="item_hiscore item-<%= item.id %> small-6 columns">
                        / <%= item.high_score %>
                    </div>
                </div>
            </div>
        </div>
    </div>





<% end %>
  <%= f.submit submit_text %>

<% end %>